{ "version":        "0.2.0"
, "configurations":
    [ { "name": "command-line-input"
      , "type": "debugpy"
      , "request": "launch"
      , "program": "${workspaceFolder}/color_scheme_driver.py"
      , "console": "integratedTerminal"
      , "args":
        [ "--scheme_type"
        , "gnome"
        //, "--background_color"
        //, "0x1c1c1c"
        //, "--foreground_color"
        //, "0xd7005f"
        //, "--rgb_list"
        , "--file"
        , "sample-themes/flux-dark.json"
        //, "--out_dir"
        //, "~/.themes/"
        ]
      }
    , { "name": "vscode-cli"
      , "type": "debugpy"
      , "request": "launch"
      , "program": "${workspaceFolder}\\color_scheme_driver.py"
      , "console": "integratedTerminal"
      , "args":
        [ "--scheme_type"
        , "vscode-term"
        //, "--background_color"
        //, "0x1c1c1c"
        //, "--foreground_color"
        //, "0xd7005f"
        //, "--rgb_list"
        //, "0x000000 0x800000 0x008000 0x808000 0x000080 0x800080 0x008080 0x808080 0x000000 0xff0000 0x00ff00 0xffff00 0x0000ff 0xff00ff 0x00ffff 0xffffff"
        , "--file"
        , "sample-themes/flux-dark.json"
        , "--name"
        , "vscode-term-color-scheme"
        ]
    }
    , { "name"   : "help"
      , "type"   : "debugpy"
      , "request": "launch"
      , "program": "${workspaceFolder}/color_scheme_driver.py"
      , "console": "integratedTerminal"
      , "args":
        [ "--help"
        ]
      }
    , { "name": "file-arg-test"
      , "type": "debugpy"
      , "request": "launch"
      , "program": "${workspaceFolder}/color_scheme_driver.py"
      , "console": "integratedTerminal"
      , "args":
        [ "--scheme_type"
        //, "gnome"
        , "konsole"
        //, "--out_dir"
        //, "~/.themes/"
        //, "~/themes/"
        , "--file"
        , "utilities/color_file_ex.json"
        ]
      }
      , { "name": "out-dir-only"
        , "type": "debugpy"
        , "request": "launch"
        , "program": "${workspaceFolder}/color_scheme_driver.py"
        , "console": "integratedTerminal"
        , "args":
        [ "--scheme_type"
        , "gnome"
        , "--out_dir"
        , "~/.themes/"
        ]
      }
      , { "name": "default"
        , "type": "debugpy"
        , "request": "launch"
        , "program": "${workspaceFolder}/color_scheme_driver.py"
        , "console": "integratedTerminal"
        , "args":
        [ "--default"
        , "--scheme_type"
        , "vscode-term"
        //, "--out_dir"
        //, "~/.themes"
        , "--name"
        , "default"
        ]
      }
    ]
}