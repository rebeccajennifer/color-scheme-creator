{ "version":        "0.2.0"

, "configurations":
  [ { "name"    : "gnome-flux-dark-linux"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args":
      [ "--scheme_type" , "gnome"
      , "--file"        , "sample-themes/flux-dark.json"
      , "--name"        , "flux-dark"
      , "--out_dir"     , "${workspaceFolder}/sample-themes"
      //, "--out_dir"     , "~/.themes"
      ]
    }
  , { "name"    : "gnome-flux-test-linux"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args":
      [ "--scheme_type" , "gnome"
      , "--file"        , "sample-themes/flux-test.json"
      , "--name"        , "flux-test"
      , "--out_dir"     , "${workspaceFolder}/sample-themes"
      //, "--out_dir"     , "~/.themes"
      ]
    }
  , { "name"    : "gnome-flux-lite-linux"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args":
      [ "--scheme_type" , "gnome"
      , "--file"        , "sample-themes/flux-lite.json"
      , "--name"        , "flux-lite"
      , "--out_dir"     , "${workspaceFolder}/sample-themes"
      //, "--out_dir"     , "~/.themes"
      ]
    }
  , { "name"    : "mintty-flux-dark"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args"    :
      [ "--scheme_type" , "mintty"
      , "--file"        , "sample-themes/flux-dark.json"
      , "--name"        , "flux-dark"
      , "--out_dir"     , "${workspaceFolder}/sample-themes"
      ]
    }
  , { "name"    : "mintty-flux-lite"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args"    :
      [ "--scheme_type" , "mintty"
      , "--file"        , "sample-themes/flux-lite.json"
      , "--name"        , "flux-dark"
      , "--out_dir"     , "${workspaceFolder}/sample-themes"
      ]
    }
  , { "name"    : "konsole-flux-dark-linux"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args":
      [ "--scheme_type" , "konsole"
      , "--file"        , "sample-themes/flux-dark.json"
      , "--name"        , "flux-dark"
      , "--out_dir"     , "${workspaceFolder}/sample-themes"
      ]
    }
  , { "name"    : "vscode-flux-dark-linux"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args":
      [ "--scheme_type" , "vscode-term"
      , "--file"        , "sample-themes/flux-dark.json"
      , "--name"        , "vs-code-flux-dark"
      , "--out_dir"     , "${workspaceFolder}/sample-themes"
      ]
    }
  , { "name"    : "help"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args":
      [ "--help"
      ]
    }
  , { "name"    : "out-dir-only"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args"    :
    [ "--scheme_type"   , "mintty"
    , "--out_dir"       , "${workspaceFolder}"
    ]
    }
  , { "name"    : "default"
    , "type"    : "debugpy"
    , "request" : "launch"
    , "program" : "${workspaceFolder}/color_scheme_driver.py"
    , "console" : "integratedTerminal"
    , "args"    :
      [ "--default"
      , "--scheme_type" , "vscode-term"
      , "--name"        , "default"
      ]
    }
  ]
}
